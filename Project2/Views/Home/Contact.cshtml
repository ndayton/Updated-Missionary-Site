@*Contact information for the site as well as a form to allow users to send a quick message to support*@

@{
    ViewBag.Title = "Contact";
}

<div class="row">
    <h2>Contact</h2>

    <address>
        <br /><strong>Phone:</strong> 111.555.0000
        <br /><strong>Email:</strong>   <a href="mailto:Missionary@example.com">Missionary@example.com</a>
    </address>
</div>

<div class="row">
    <div class="col-xs-2">

    </div>
    <div class="col-xs-6 somecolor img-rounded">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal somecolor">
                <h4>Message Us</h4>
                <hr />
                <div class="form-group row">
                    <div class="col-xs-2 righted">
                        <label for="firstName">Name:</label>
                    </div>
                    <div class="col-xs-10">
                        @Html.TextBox("Name")
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-xs-2 righted">
                        <label for="email">Email:</label>
                    </div>
                    <div class="col-xs-10">
                        @Html.TextBox("email")
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-xs-2 righted">
                        <label for="subject">Subject:</label>
                    </div>
                    <div class="col-xs-10">
                        @Html.DropDownList("subject")
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-xs-2 righted">
                        <label for="message">Message:</label>
                    </div>
                    <div class="col-xs-10">
                        @Html.TextArea("message", new { rows = "", cols = "", style = "width: 232px; height: 90px;" })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-xs-1 righted">

                    </div>
                    <div class="col-xs-11">
                        <input type="submit" value="Submit" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-xs-4">

    </div>
</div>
